{% extends 'template.html.twig' %}

{% block title %}{{ edit_mode ? 'Modifier un Doctorant' : 'Ajouter un Doctorant' }}{% endblock %}

{% block body %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
</div>
<div class="row">
    <div class="col-lg-12 mx-auto">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">{{ edit_mode ? 'Modifier un Doctorant' : 'Ajouter un Doctorant' }}</h5>
                <hr>
                {% include "flaches.html.twig" %}
                <div class="form-container">
                    {{ form_start(form) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="nom" class="form-label fw-bold">Nom</label>
                            {{ form_row(form.nom, {'label': false, 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            <label for="prenom" class="form-label fw-bold">Prénom</label>
                            {{ form_row(form.prenom, {'label': false, 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            <label for="code" class="form-label fw-bold">Code Apogée</label>
                            {{ form_row(form.code, {'label': false, 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            <label for="email" class="form-label fw-bold">Email Institutionnel</label>
                            {{ form_row(form.email, {'label': false, 'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-primary">{{ edit_mode ? 'Modifier' : 'Ajouter' }}</button>
                        <a href="{{ path('list_doctorants') }}" class="btn btn-secondary">Retour</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% if not form.vars.valid %}
    <div class="alert alert-danger">
        {{ form_errors(form) }}
    </div>
{% endif %}
{% endblock %}
