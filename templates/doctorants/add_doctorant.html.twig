{% extends 'template.html.twig' %}

{% block title %}{{ edit_mode ? 'Modifier un Doctorant' : 'Ajouter un Doctorant' }}{% endblock %}

{% block body %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">{{ edit_mode ? 'Modifier un Doctorant' : 'Ajouter un Doctorant' }}</div>
</div>
<div class="row">
    <div class="col-lg-12 mx-auto">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">{{ edit_mode ? 'Modifier un Doctorant' : 'Ajouter un Doctorant' }}</h5>
                <hr>
                {% include "flaches.html.twig" %}
                <div class="form-container">
                    {{ form_start(form) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.prenom) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.code) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.email) }}
                        </div>
                    </div>
                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-primary">{{ edit_mode ? 'Modifier' : 'Ajouter' }}</button>
                        <a href="{{ path('list_doctorants') }}" class="btn btn-secondary">Retour</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{# In add_doctorant.html.twig #}
{% if not form.vars.valid %}
    <div class="alert alert-danger">
        {{ form_errors(form) }}
    </div>
{% endif %}
{% endblock %}
