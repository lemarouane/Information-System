{% extends 'template.html.twig' %}

{% block title %}Liste des Doctorants{% endblock %}

{% block body %}
<!-- Breadcrumb -->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Liste des Doctorants</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Liste des Doctorants</li>
            </ol>
        </nav>
    </div>
</div>



<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="card-title">Liste des Doctorants</h5>
    <div>
        <a href="{{ path('import_doctorants') }}" class="btn btn-success">
            Importer depuis Excel
        </a>
    </div>
</div>
<!-- End Breadcrumb -->

<div class="card shadow-sm border-0">
    <div class="card-header py-3">
        <div class="row align-items-center g-3">
            <div class="col-12 col-lg-6">
                <h5 class="mb-0">Liste des Doctorants</h5>
            </div>
            <div class="col-12 col-lg-6 text-end">
                <a href="{{ path('add_doctorant') }}" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle"></i> Ajouter un Doctorant
                </a>
            </div>
        </div>
    </div>

    <div class="card-body">
        {% include "flaches.html.twig" %}
        <div class="table-responsive">
            <table id="doctorantsTable" class="table table-striped table-bordered text-center">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Code</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if doctorants is not empty %}
                        {% for doctorant in doctorants %}
                            <tr>
                                <td>{{ doctorant.id }}</td>
                                <td>{{ doctorant.email }}</td>
                                <td>{{ doctorant.code }}</td>
                                <td>{{ doctorant.nom }}</td>
                                <td>{{ doctorant.prenom }}</td>
                                <td>
                                    <div class="table-actions fs-6">
                                        <a href="{{ path('edit_doctorant', {id: doctorant.id}) }}" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Modifier">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        &nbsp;
                                        <a href="{{ path('delete_doctorant', {id: doctorant.id}) }}" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce doctorant ?');">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">Aucun doctorant trouvé.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer text-end">
        <small class="text-muted">Gestion des Doctorants</small>
    </div>
</div>

<!-- Add any additional icons or buttons as needed -->
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .breadcrumb-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .table-actions .bi {
        font-size: 1.25rem;
        cursor: pointer;
    }

    .table-actions .bi-pencil-fill:hover {
        color: #ffc107; /* Bootstrap warning color */
    }

    .table-actions .bi-trash-fill:hover {
        color: #dc3545; /* Bootstrap danger color */
    }
</style>
{% endblock %}
