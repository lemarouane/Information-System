{% extends 'template.html.twig' %}

{% block title %}Liste des Doctorants{% endblock %}

{% block body %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Liste des Doctorants</div>
</div>
<div class="card shadow-lg">
    <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Liste des Doctorants</h4>
        <div>
            <a href="{{ path('add_doctorant') }}" class="btn btn-light rounded-pill">
                <i class="bi bi-plus-circle"></i> Ajouter
            </a>
            <a href="{{ path('import_doctorants') }}" class="btn btn-light rounded-pill">
                <i class="bi bi-file-earmark-arrow-up"></i> Importer
            </a>
        </div>
    </div>
    <div class="card-body">
        {% include "flaches.html.twig" %}
        <div class="table-responsive">
            <table class="table table-bordered text-center align-middle shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Code</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for doctorant in doctorants %}
                        <tr style="background: #f7f9fc;">
                            <td>{{ doctorant.id }}</td>
                            <td>{{ doctorant.email }}</td>
                            <td>{{ doctorant.code }}</td>
                            <td>{{ doctorant.nom }}</td>
                            <td>{{ doctorant.prenom }}</td>
                            <td>
                                <a href="{{ path('edit_doctorant', {id: doctorant.id}) }}" class="btn btn-warning rounded-pill px-3 me-2">
                                    <i class="bi bi-pencil-fill"></i> Modifier
                                </a>
                                <a href="{{ path('delete_doctorant', {id: doctorant.id}) }}" class="btn btn-danger rounded-pill px-3" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce doctorant ?');">
                                    <i class="bi bi-trash-fill"></i> Supprimer
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-muted">Aucun doctorant trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
