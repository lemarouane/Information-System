{% extends 'template.html.twig' %}

{% block title %}Liste des Doctorants{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">
<style>
    #doctorantsTable_wrapper .dataTables_filter {
        margin-bottom: 20px;
    }
    .dataTables_wrapper .dataTables_paginate {
        margin-top: 10px;
    }
</style>
{% endblock %}

{% block body %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Liste des Doctorants</div>
</div>
<div class="card shadow-lg">
    <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Liste des Doctorants</h4>
        <div>
            <a href="{{ path('add_doctorant') }}" class="btn btn-light rounded-pill">
                <i class="bi bi-plus-circle"></i> Ajouter
            </a>
            <a href="{{ path('import_doctorants') }}" class="btn btn-light rounded-pill">
                <i class="bi bi-file-earmark-arrow-up"></i> Importer
            </a>
            <a href="{{ path('list_validated_doctorants') }}" class="btn btn-primary">
                <i class="bi bi-list-check"></i> Voir les Doctorants Validés
            </a>
        </div>
    </div>
    <div class="card-body">
        <!-- Messages -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} text-center">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        
        <!-- Table -->
        <div class="table-responsive">
            <table id="doctorantsTable" class="table table-bordered text-center align-middle shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>ID</th>
                        <th>الإسم الشخصي</th>
                        <th>النسب</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>CIN</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Choix</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for doctorant in doctorants %}
                        <tr>
                            <td>{{ doctorant.id }}</td>
                            <td>{{ doctorant.prenomArabe }}</td>
                            <td>{{ doctorant.nomArabe }}</td>
                            <td>{{ doctorant.nom }}</td>
                            <td>{{ doctorant.prenom }}</td>
                            <td>{{ doctorant.cin }}</td>
                            <td>{{ doctorant.email }}</td>
                            <td>{{ doctorant.telephone }}</td>
                            <td>{{ doctorant.choix }}</td>
                            <td>
                                <a href="{{ path('view_doctorant', { id: doctorant.id }) }}" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye-fill"></i> Voir
                                </a>
                                <a href="{{ path('edit_doctorant', {id: doctorant.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-fill"></i> Modifier
                                </a>
                                <button 
                                    class="btn btn-success btn-sm" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#validationModal" 
                                    data-doctorant-id="{{ doctorant.id }}" 
                                    data-doctorant-name="{{ doctorant.nom }} {{ doctorant.prenom }}">
                                    <i class="bi bi-check-circle-fill"></i> Valider
                                </button>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10" class="text-muted">Aucun doctorant trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal for Validation -->
<div class="modal fade" id="validationModal" tabindex="-1" aria-labelledby="validationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="validationModalLabel">Validation du Doctorant</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="POST" action="#" id="validationForm">
                <div class="modal-body">
                    <p>Veuillez sélectionner un personnel et une structure pour valider le doctorant suivant :</p>
                    <div>
                        <strong>Doctorant :</strong>
                        <span id="doctorantName"></span>
                    </div>
                    <div class="mt-3">
                        <label for="personnelSelect" class="form-label">Choisir un Personnel :</label>
                        <select class="form-select" id="personnelSelect" name="personnel_id" required>
                            <option value="" selected disabled>-- Sélectionner un personnel --</option>
                            {% for personnel in personnels %}
                                <option value="{{ personnel.id }}">{{ personnel.nom }} {{ personnel.prenom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="mt-3">
                        <label for="structureSelect" class="form-label">Choisir une Structure :</label>
                        <select class="form-select" id="structureSelect" name="structure_id" required>
                            <option value="" selected disabled>-- Sélectionner une structure --</option>
                            {% for structure in structures %}
                                <option value="{{ structure.id }}">{{ structure.libelleStructure }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-success">Valider</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#doctorantsTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/fr-FR.json'
            },
            responsive: true,
            autoWidth: false,
            order: [[0, 'asc']],
        });
    });

    document.addEventListener('DOMContentLoaded', function () {
        const validationModal = document.getElementById('validationModal');

        validationModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const doctorantId = button.getAttribute('data-doctorant-id');
            const doctorantName = button.getAttribute('data-doctorant-name');

            const doctorantNameSpan = document.getElementById('doctorantName');
            doctorantNameSpan.textContent = doctorantName;

            const validationForm = document.getElementById('validationForm');
            validationForm.action = "{{ path('validate_doctorant', { id: 'doctorantId' }) }}".replace('doctorantId', doctorantId);
        });
    });
</script>
{% endblock %}
